<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>

        <org.lineageos.settings.touchsampling.VideoPreference
            android:key="htsr_media"
            android:selectable="false" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="htsr_enable"
            android:summary="@string/htsr_enable_summary"
            android:title="@string/htsr_enable_title"
            android:showDefault="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/htsr_auto_enable_title">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="htsr_auto_enable_selected_apps"
            android:title="@string/htsr_auto_enable_apps_title"
            android:summary="@string/htsr_auto_enable_apps_summary"
            android:showDefault="false" />

        <Preference
            android:key="htsr_per_app_config"
            android:title="@string/htsr_per_app_config_title"
            android:summary="@string/htsr_per_app_config_summary" />
    </PreferenceCategory>
</PreferenceScreen>
